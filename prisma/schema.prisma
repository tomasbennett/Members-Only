generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {
  id    Int     @id @default(autoincrement())
  username  String @unique
  password  String
  member  Boolean

  posts Posts[]
}

model Posts {
  id  Int @id @default(autoincrement())
  title String
  body  String

  userId  Int
  user Users  @relation(fields: [userId], references: [id], onDelete: Cascade)
}